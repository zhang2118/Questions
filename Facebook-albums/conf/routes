# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index(code: String ?=null)

GET        /login               controllers.Application.login()

GET        /getAlbums           controllers.Application.getAlbums()

GET        /albums              controllers.Application.albums()

GET        /album/:id           controllers.Application.album(id: Long)

GET         /:id/picture          controllers.Application.getThumbnailUrl(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
